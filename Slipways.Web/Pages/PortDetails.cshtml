@page
@model com.b_velop.Slipways.Web.PortDetailsModel
@{
    ViewData["Title"] = "PortDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section AdditionalMeta
{
    <title>Marina @Model.Port.Name</title>
    <meta name="description" content="Detailansicht der Marina @Model.Port.Name in @Model.Port.Postalcode - @Model.Port.City" />
    <meta name="keywords" content="Marina, Hafen, @Model.Port.Name, Slipanlagen, Slipways, Slipway, Boote, Boot, Schlauchboot, Camping, Trailering, Sliprampe" />
}

<div class="container">
    <div class="card mt-4">
        <div class="row no-gutters">

            <div class="col-md-4 p-2">
                <iframe width="500"
                        class="card-img"
                        height="500"
                        frameborder="1"
                        style="border:0"
                        src="https://www.google.com/maps/embed/v1/view?key=@Model.ApiKey&center=@Model.Port.Latitude,@Model.Port.Longitude&zoom=18&maptype=satellite">
                </iframe>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Port.Name</h5>
                    <p class="card-text">@Model.Port.Street</p>
                    <p class="card-text">@Model.Port.Postalcode - @Model.Port.City</p>
                    <p class="card-text"><i class="fa fa-phone-alt"></i> @Model.Port.Phone </p>
                    <p class="card-text"><i class="fa fa-at"></i> @Model.Port.Email</p>
                    <br />
                    <span>
                        <a asp-page="/Ports" class="btn btn-warning w-25">Zurück</a>
                        @if (Model.Port.Url != null)
                        {
                            <a class="btn btn-primary w-25" target="_blank" href="@Model.Port.Url">Webseite</a>
                        }
                        <a href="https://www.google.com/maps/place/@Model.Port.Latitude,@Model.Port.Longitude" class="btn btn-success w-25"><img src="~/img/route-24.png" alt="route" /></a>
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>
