@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="form-group row">
        <div class="col-md-5">
            <h2 class="display-4">Slipanlagen</h2>
        </div>
        <div class="col-md-5">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><img src="~/img/search-24.png" alt="search icon" /></span>
                </div>
                <input type="text" id="searchField" class="form-control" placeholder="Suche" aria-label="Suche" aria-describedby="basic-addon1" onkeyup="filterTable()">
            </div>
        </div>
        <div class="col-md-2">Checkbox</div>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1" onchange="selected()">
                <label class="form-check-label" for="gridCheck1">
                    nur kostenlos
                </label>
            </div>
        </div>
    </div>
    <div id="slipwayTable">
        <partial name="Shared/_SlipwayTable" for="Slipways" />
    </div>

</div>

@section Scripts{
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
        function filterTable() {
            let searchField = document.getElementById("searchField").value
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    let i = document.getElementById("slipwayTable");
                    i.innerHTML = xhttp.responseText;
                }
            };
            xhttp.open("GET", `/?handler=Filter&search=${searchField}`, true);
            xhttp.send();
        }

        function selected() {
            let check = document.getElementById("gridCheck1").checked;
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    let i = document.getElementById("slipwayTable");
                    i.innerHTML = xhttp.responseText;
                }
            };
            xhttp.open("GET", `/?handler=Free&onlyFree=${check}`, true);
            xhttp.send();
        }
    </script>
}