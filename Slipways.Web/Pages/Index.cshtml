@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div class="form-group row">

    <div class="col-md-5">
        <h2 class="display-4">Slipanlagen</h2>
    </div>

    <div class="col-md-7">
        <div class="row">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><img src="~/img/search-24.png" alt="search icon" /></span>
                </div>
                <input type="text" id="searchField" class="form-control" placeholder="Suche" aria-label="Suche" aria-describedby="basic-addon1" onkeyup="filterTable()">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="onlyFreeCheck" onchange="filterTable()">
                <label class="form-check-label" for="gridCheck1">
                    nur kostenlose Slipanlagen einblenden (oder Preis nicht bekannt)
                </label>
            </div>
        </div>
    </div>
</div>
<div id="slipwayTable">
    <partial name="Shared/_SlipwayTable" for="Slipways" />
</div>


@section Scripts{
    <script>$(function () {
            $('[data-toggle="popover"]').popover()
        })
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        const filterTable = () => {
            const searchField = document.getElementById("searchField").value;
            const onlyFree = document.getElementById("onlyFreeCheck").checked;
            const xhttp = new XMLHttpRequest();

            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    let i = document.getElementById("slipwayTable");
                    i.innerHTML = xhttp.responseText;
                }
            };
            xhttp.open("GET", `/?handler=Filter&search=${searchField}&onlyFree=${onlyFree}`, true);
            xhttp.send();
        };</script>
}