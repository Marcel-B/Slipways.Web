<h1>Bearbeiten</h1>

<form method="post">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Name">@Html.DisplayNameFor(model => Model.Slipway.Name)</label>
            <input class="form-control" placeholder="Name" asp-for="Slipway.Name">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Slipway.City">@Html.DisplayNameFor(model => Model.Slipway.City)</label>
            <input class="form-control" placeholder="Stadt / Ort" asp-for="Slipway.City">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Street">@Html.DisplayNameFor(model => Model.Slipway.Street)</label>
            <input class="form-control" placeholder="Straße" asp-for="Slipway.Street">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Postalcode">@Html.DisplayNameFor(model => Model.Slipway.Postalcode)</label>
            <input class="form-control" placeholder="Postleitzahl" asp-for="Slipway.Postalcode">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Longitude">@Html.DisplayNameFor(model => Model.Slipway.Longitude)</label>
            <input class="form-control" placeholder="Längengrad" asp-for="Slipway.Longitude">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Latitude">@Html.DisplayNameFor(model => Model.Slipway.Latitude)</label>
            <input class="form-control" placeholder="Breitengrad" asp-for="Slipway.Latitude">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Slipway.Comment">@Html.DisplayNameFor(model => Model.Slipway.Comment)</label>
            <textarea class="form-control" placeholder="Kommenta" asp-for="Slipway.Comment"></textarea>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Pro">@Html.DisplayNameFor(model => Model.Slipway.Pro)</label>
            <input class="form-control" placeholder="Pro" asp-for="Slipway.Pro">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Contra">@Html.DisplayNameFor(model => Model.Slipway.Contra)</label>
            <input class="form-control" placeholder="Kontra" asp-for="Slipway.Contra">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Costs">@Html.DisplayNameFor(model => Model.Slipway.Costs)</label>
            <input class="form-control" placeholder="Preis" asp-for="Slipway.Costs">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Slipway.Rating">@Html.DisplayNameFor(model => Model.Slipway.Rating)</label>
            <input class="form-control" placeholder="Bewertung (0 - 5)" asp-for="Slipway.Rating">
        </div>
    </div>

