

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Stadt / Ort
            </th>
            <th>
                Kosten
            </th>
            <th>
                <a class="btn btn-success" href="/Admin/Slipway/Create">Neu</a>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var slipway in Model.Slipways)
        {
            <tr>
                <td>
                    @slipway.Name
                </td>
                <td>
                    @slipway.City
                </td>
                <td>
                    @slipway.Costs
                </td>
                <td>
                    <button class="btn btn-success">Details</button>
                    <button class="btn btn-primary">Edit</button>
                    <a class="btn btn-danger" asp-page="./Index" asp-route-id="@slipway.Id.ToString()">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>